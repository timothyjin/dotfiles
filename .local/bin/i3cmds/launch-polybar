#!/bin/sh

# Terminate already running bar instances
killall -q polybar

# Wait until the processes have been shut down
while pgrep -u $(id -u) -x polybar >/dev/null; do sleep 1; done

# Launch bars
if [ "$(current-display)" = "VIRTUAL1" ]; then
    polybar main &
    polybar side &
else
    polybar top &
fi
