# vim:filetype=i3

# ----- Definitions ----- #
for_window [class="^.*"] border pixel 2
for_window [class="St" title="dd_*"] floating enable
gaps inner 10
gaps outer 5
set $term --no-startup-id $TERMINAL
set $mod Mod4
set $shutdown sudo -A shutdown -h now
set $reboot sudo -A reboot
set $netrefresh sudo -A systemctl restart NetworkManager
set $hibernate sudo -A systemctl suspend

# ----- External ----- #
exec --no-startup-id feh --bg-scale ~/.config/wallpaper.jpg
# exec --no-startup-id compton --config ~/.config/compton.conf &
exec --no-startup-id compconf
exec --no-startup-id redshift &
exec --no-startup-id nm-applet
exec --no-startup-id dunst
exec --no-startup-id mpd ~/.config/mpd/mpd.conf

# ----- Colors ----- #
set_from_resource $darkblack    color0  #000000
set_from_resource $black        color8  #000000
set_from_resource $darkred      color1  #000000
set_from_resource $red          color9  #000000
set_from_resource $darkgreen    color2  #000000
set_from_resource $green        color10 #000000
set_from_resource $darkyellow   color3  #000000
set_from_resource $yellow       color11 #000000
set_from_resource $darkblue     color4  #000000
set_from_resource $blue         color12 #000000
set_from_resource $darkmagenta  color5  #000000
set_from_resource $magenta      color13 #000000
set_from_resource $darkcyan     color6  #000000
set_from_resource $cyan         color14 #000000
set_from_resource $darkwhite    color7  #000000
set_from_resource $white        color15 #000000
set $transparent                #00000000

#                       BORDER          BACKGROUND      TEXT        INDICATOR       CHILD_BORDER
client.focused          $darkgreen      $darkblack      $darkred    $red            $darkgreen
client.focused_inactive $transparent    $blue           $white      $darkblack      $darkblack
client.unfocused        $transparent    $blue           $white      $darkblack      $darkblack
client.urgent           $darkred        $darkred        $black      $darkred        $darkred
client.background       $black

bar {
    # ----- i3blocks ----- #
    # font pango:lato 9
    # status_command i3blocks
    # position bottom
    # mode dock
    # modifier none

    # ----- bumblebee-status ----- #
    font pango:DejaVu Sans Mono, FontAwesome 9
    position bottom
    status_command /usr/bin/bumblebee-status -m mpd pasink sensors cpu memory disk nic battery date time -p engine.workspacewrap=false mpd.right-click="st -e ncmpcpp" mpd.format="{artist} - {title} [{position}/{duration}]" cpu.left-click="st -e gtop" memory.left-click="st -e gtop" memory.format="{used}/{total}" disk.path=/ disk.left-click="st -e ranger" disk.format="{used}/{size}" nic.states=^down nic.left-click="st -e nmtui" nic.format="{ip} {ssid}" date.left-click="st -t dd_calcurse -e calcurse" date.format="%a %b %d %Y" time.format="%H:%M" -t greyish-powerline

    colors {
        background $darkblack
        statusline $white
        separator $darkred
        focused_workspace $green $darkgreen $darkblack
        active_workspace $blue $blue $darkwhite
        inactive_workspace $darkblack $darkblack $white
        urgent_workspace $darkblack $darkblack $white
    }
}

floating_modifier $mod

# ----- Special Keys ----- #
bindsym $mod+Return exec $term
#bindsym $mod+Shift+Return

bindsym $mod+space floating toggle
bindsym $mod+Shift+space focus mode_toggle

bindsym $mod+Escape exec --no-startup-id prompt "Exit i3?" "i3-msg exit"
#bindsym $mod+Shift+Escape

bindsym $mod+BackSpace exec --no-startup-id prompt "Shutdown?" "$shutdown"
bindsym $mod+Shift+BackSpace exec --no-startup-id prompt "Reboot?" "$reboot"

# ----- Letter Keys ----- #
bindsym $mod+q kill
bindsym $mod+Shift+q kill

bindsym $mod+w exec --no-startup-id firefox
bindsym $mod+Shift+w exec --no-startup-id firefox --private-window

bindsym $mod+e exec $term -e gtop
#bindsym $mod+Shift+e

bindsym $mod+r exec $term -e ranger
bindsym $mod+Shift+r exec $term -e sudo -A ranger

bindsym $mod+t split toggle
bindsym $mod+Shift+t gaps inner current set 10; gaps outer current set 5

#bindsym $mod+y
bindsym $mod+Shift+y exec --no-startup-id i3resize left

#bindsym $mod+u
bindsym $mod+Shift+u exec --no-startup-id i3resize down

#bindsym $mod+i
bindsym $mod+Shift+i exec --no-startup-id i3resize up

#bindsym $mod+o
bindsym $mod+Shift+o exec --no-startup-id i3resize right

bindsym $mod+p exec --no-startup-id pavucontrol
#bindsym $mod+Shift+p

bindsym $mod+a exec $term -e calcurse
#bindsym $mod+Shift+a

bindsym $mod+s gaps inner current plus 5
bindsym $mod+Shift+s gaps inner current minus 5

bindsym $mod+d exec --no-startup-id dmenu_run
#bindsym $mod+Shift+d

bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+f gaps inner current set 0; gaps outer current set 0

#bindsym $mod+g
#bindsym $mod+Shift+g

bindsym $mod+h focus left
bindsym $mod+Shift+h move left 30

bindsym $mod+j focus down
bindsym $mod+Shift+j move down 30

bindsym $mod+k focus up
bindsym $mod+Shift+k move up 30

bindsym $mod+l focus right
bindsym $mod+Shift+l move right 30

#bindsym $mod+z
#bindsym $mod+Shift+z

bindsym $mod+x exec --no-startup-id lock
#bindsym $mod+Shift+x

bindsym $mod+c exec --no-startup-id showclip
#bindsym $mod+Shift+c

#bindsym $mod+v
#bindsym $mod+Shift+v

bindsym $mod+b bar mode toggle
#bindsym $mod+Shift+b

bindsym $mod+n exec $term -e nmtui
#bindsym $mod+Shift+n

bindsym $mod+m exec $term -e ncmpcpp
bindsym $mod+Shift+m exec --no-startup-id maim -u ~/Pictures/$(date +%s).png

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# ----- Number Keys ----- #
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# ----- Function Keys ----- #
bindsym $mod+F1 exec --no-startup-id volctl mute
bindsym $mod+F2 exec --no-startup-id volctl down 2
bindsym $mod+F3 exec --no-startup-id volctl up 2
#bindsym $mod+F4
bindsym $mod+F5 restart
#bindsym $mod+F6
#bindsym $mod+F7
bindsym $mod+F8 exec --no-startup-id $netrefresh
#bindsym $mod+F9
#bindsym $mod+F10
#bindsym $mod+F11
bindsym $mod+F12 exec $term -t "dd_calcurse" -e calcurse

# ----- Arrow Keys ----- #
bindsym $mod+Up focus up
bindsym $mod+Down focus down
bindsym $mod+Left focus left
bindsym $mod+Right focus right

# ----- Multimedia Keys ----- #
bindsym XF86AudioMute exec --no-startup-id volctl mute
bindsym XF86AudioLowerVolume exec --no-startup-id volctl down 2
bindsym XF86AudioRaiseVolume exec --no-startup-id volctl up 2
