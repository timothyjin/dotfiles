# vim:filetype=i3

# ----- Definitions ----- #
for_window [class="^.*"] border pixel 2
for_window [class="St" instance="float_*"] floating enable
set $term --no-startup-id $TERMINAL
set $mod Mod4
set $shutdown sudo -A shutdown -h now
set $reboot sudo -A reboot
set $netrefresh sudo -A systemctl restart NetworkManager
set $hibernate sudo -A systemctl suspend
set $inner 10
set $outer 0

gaps inner $inner
gaps outer $outer

# ----- External ----- #
exec --no-startup-id dunst
exec --no-startup-id mpd ~/.config/mpd/mpd.conf
exec --no-startup-id autotiling &
exec_always --no-startup-id feh --bg-scale --no-fehbg ~/.config/wallpaper.png
exec_always --no-startup-id launch-xautolock
exec_always --no-startup-id launch-polybar
exec_always --no-startup-id ~/.config/i3/autoname_workspaces.py &
exec_always --no-startup-id launch-compton
exec_always --no-startup-id launch-redshift

# ----- Colors ----- #
set_from_resource $darkblack    color0  #000000
set_from_resource $black        color8  #000000
set_from_resource $darkred      color1  #000000
set_from_resource $red          color9  #000000
set_from_resource $darkgreen    color2  #000000
set_from_resource $green        color10 #000000
set_from_resource $darkyellow   color3  #000000
set_from_resource $yellow       color11 #000000
set_from_resource $darkblue     color4  #000000
set_from_resource $blue         color12 #000000
set_from_resource $darkmagenta  color5  #000000
set_from_resource $magenta      color13 #000000
set_from_resource $darkcyan     color6  #000000
set_from_resource $cyan         color14 #000000
set_from_resource $darkwhite    color7  #000000
set_from_resource $white        color15 #000000
set $transparent                #00000000

#                       BORDER          BACKGROUND      TEXT        INDICATOR       CHILD_BORDER
client.focused          $darkblack      $black          $darkblack  $magenta        $blue
# client.focused          $darkblack      $black          $darkblack  $darkyellow     $darkred
client.focused_inactive $darkred        $darkblack      $darkred    $darkblack      $darkblack
client.unfocused        $darkred        $darkblack      $darkred    $darkblack      $darkblack
client.urgent           $darkblack      $darkred        $darkblack  $darkred        $darkred
client.background       $black

floating_modifier $mod

# ----- Special Keys ----- #
bindsym $mod+Return exec $term
#bindsym $mod+Shift+Return

bindsym $mod+space focus mode_toggle
bindsym $mod+Shift+space floating toggle

bindsym $mod+Escape exec --no-startup-id prompt "Exit i3?" "i3-msg exit"
# bindsym $mod+Shift+Escape

bindsym $mod+BackSpace exec --no-startup-id prompt "Shutdown?" "$shutdown"
# bindsym $mod+Shift+BackSpace

bindsym $mod+Delete exec --no-startup-id prompt "Reboot Linux?" "$reboot"
bindsym $mod+Shift+Delete exec --no-startup-id prompt "Reboot Windows?" winboot

bindsym $mod+grave restart

# ----- Letter Keys ----- #
bindsym $mod+q kill
bindsym $mod+Shift+q kill

bindsym $mod+w exec --no-startup-id firefox
bindsym $mod+Shift+w exec --no-startup-id firefox --private-window

bindsym $mod+e exec $term -n $EDITOR -e $EDITOR
bindsym $mod+Shift+e exec --no-startup-id dmenuunicode

bindsym $mod+r exec $term -n $FILE -e $FILE
bindsym $mod+Shift+r exec $term -e sudo -A $FILE

bindsym $mod+t split toggle
bindsym $mod+Shift+t gaps inner current set $inner; gaps outer current set $outer

#bindsym $mod+y
bindsym $mod+Shift+y exec --no-startup-id i3resize left

#bindsym $mod+u
bindsym $mod+Shift+u exec --no-startup-id i3resize down

#bindsym $mod+i
bindsym $mod+Shift+i exec --no-startup-id i3resize up

bindsym $mod+o sticky toggle
bindsym $mod+Shift+o exec --no-startup-id i3resize right

bindsym $mod+p exec $term -e pulsemixer
bindsym $mod+Shift+p exec --no-startup-id pavucontrol

bindsym $mod+a exec $term -n float_calcurse -e calcurse
bindsym $mod+Shift+a exec $term -e calcurse

bindsym $mod+s gaps inner current plus 5
bindsym $mod+Shift+s gaps inner current minus 5

bindsym $mod+d exec --no-startup-id dmenu_run
bindsym $mod+Shift+d exec --no-startup-id dmenu_file

bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+f gaps inner current set 0; gaps outer current set 0

bindsym $mod+g exec $term -n gtop -e gtop
#bindsym $mod+Shift+g

bindsym $mod+h focus left
bindsym $mod+Shift+h move left 30

bindsym $mod+j focus down
bindsym $mod+Shift+j move down 30

bindsym $mod+k focus up
bindsym $mod+Shift+k move up 30

bindsym $mod+l focus right
bindsym $mod+Shift+l move right 30

bindsym $mod+z gaps outer current plus 5
bindsym $mod+Shift+z gaps outer current minus 5

bindsym $mod+x exec --no-startup-id showclip
#bindsym $mod+Shift+x

bindsym $mod+c exec $term -n float_calc -e bc -ql
# bindsym $mod+Shift+c

bindsym $mod+v exec $term -n cava -e cava
#bindsym $mod+Shift+v

bindsym $mod+b bar mode toggle
bindsym $mod+Shift+b floating toggle; sticky toggle; exec --no-startup-id hover left

bindsym $mod+n exec $term -n nmtui -e nmtui
bindsym $mod+Shift+n floating toggle; sticky toggle; exec --no-startup-id hover right

bindsym $mod+m exec $term -n ncmpcpp -e ncmpcpp
# bindsym $mod+Shift+m

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# ----- Number Keys ----- #
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# ----- Arrow Keys ----- #
bindsym $mod+Up focus up
bindsym $mod+Down focus down
bindsym $mod+Left focus left
bindsym $mod+Right focus right

# ----- Function Keys ----- #
bindsym $mod+F1 exec --no-startup-id volctl mute
bindsym $mod+F2 exec --no-startup-id volctl down 2
bindsym $mod+F3 exec --no-startup-id volctl up 2
bindsym $mod+F4 exec --no-startup-id pactl set-source-mute 1 toggle
bindsym $mod+F5 exec --no-startup-id brillo -U 10
bindsym $mod+F6 exec --no-startup-id brillo -A 10
bindsym $mod+F7 exec --no-startup-id prompt "Switch to external display?" "monon -d"
bindsym $mod+Shift+F7 exec --no-startup-id prompt "Switch to laptop display?" monoff
# bindsym $mod+F8 exec --no-startup-id $netrefresh
# bindsym $mod+F9
# bindsym $mod+F10
# bindsym $mod+F11
bindsym $mod+F12 exec --no-startup-id lock

# ----- Multimedia Keys ----- #
bindsym XF86AudioMute exec --no-startup-id volctl mute
bindsym XF86AudioLowerVolume exec --no-startup-id volctl down 2
bindsym XF86AudioRaiseVolume exec --no-startup-id volctl up 2
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute 1 toggle
bindsym XF86MonBrightnessDown exec --no-startup-id brillo -U 10
bindsym XF86MonBrightnessUp exec --no-startup-id brillo -A 10
bindsym XF86Display exec --no-startup-id prompt "Switch to external display?" "monon -d"
bindsym Shift+XF86Display exec --no-startup-id prompt "Switch to laptop display?" monoff
# bindsym XF86WLAN -> airplane mode
# bindsym XF86Tools
# bindsym XF86Bluetooth
# bindsym ^F11?
bindsym XF86Favorites exec --no-startup-id lock
bindsym Print exec --no-startup-id maim -u ~/Pictures/$(date +%s).png
